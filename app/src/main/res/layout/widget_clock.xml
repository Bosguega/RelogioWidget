            android:textSize="130sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:maxLines="1" />

        <TextView
            android:id="@+id/widget_date_text"
            android:layout_width="wrap_content"
